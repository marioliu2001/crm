<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjpowernode.crm.settings.dao.DictionaryValueDao">
    <!--value新增操作-->
    <insert id="insert">
        insert into tbl_dic_value
        (id, value, text, orderNo, typeCode) values
        (#{id},${value},#{text},#{orderNo},#{typeCode})
    </insert>

    <select id="findListByTypeCode" resultType="java.lang.Integer">
        select count(*) from tbl_dic_value
        where typeCode=#{code}
    </select>
    <select id="findAll" resultType="com.bjpowernode.crm.settings.domain.DictionaryValue">
        select * from tbl_dic_value
    </select>
    <select id="findAllByTypeCode" resultType="com.bjpowernode.crm.settings.domain.DictionaryValue">
        select * from tbl_dic_value
        where typeCode=#{code} order by orderNo asc
    </select>
</mapper>
